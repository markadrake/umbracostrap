@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels
@using System.Globalization

@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

@{
	Layout = null;
	//string environment = System.Environment.GetEnvironmentVariable("Environment").ToLower();
	string environment = "release";
	CultureInfo currentCulture = System.Threading.Thread.CurrentThread.CurrentCulture;
	string cacheBustString = Umbracostrap.Web.Helpers.ApplicationHelper.GetVersion();
}

<!DOCTYPE html>
<html lang="@(currentCulture.TwoLetterISOLanguageName)">
<head>

	@*
		(Optional) HTML Head Start
	*@
	@RenderSection("HtmlHeadStart", false)

	@*
		Document Metadata,
		SEO Markup,
		Open Graph Markup,
		Twitter Markup
	*@
	@Html.Partial("_head")

	@*
		Client Side Dependencies
	*@
	<link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<link rel="stylesheet" href="?@(cacheBustString)" />
	<link rel="preload" href="?@(cacheBustString)" as="style" onload="this.rel='stylesheet';this.onload=null" />
	<script src="?@(cacheBustString)"></script>

	@*
		(Optional) HTML Head End
	*@
	@RenderSection("HtmlHeadEnd", false)

	<style>img {max-width: 100%;}</style>

</head>
<body>
	@*
		(Optional) HTML Body Start
	*@
	@RenderSection("HtmlBodyStart", false)

	@*
		Header
	*@
	@Html.Partial("_header")

	@*
		Body
	*@
	<main class="main">
		@RenderBody()
	</main>

	@*
		Footer
	*@
	@Html.Partial("_footer")

	@*
		Client Side Dependencies
	*@
	@Html.Partial("_svgs")
	<noscript>
		<link rel="stylesheet" href="?@(cacheBustString)">
	</noscript>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
	<script src="?@(cacheBustString)" async defer></script>

	@*
		(Optional) HTML Body End
	*@
	@RenderSection("HtmlBodyEnd", false)
</body>
</html>